<!DOCTYPE html>
<html>
    <head>
        <meta charset = "utf-8">
        <meta name="viewport" content="width-device-width">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src = "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore-min.js" ></script> 
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/styles.css">
          <script>
        $(document).ready(function(){
         
             $("#keyword").val("education");;
             
             $("#searchBtn1").on("click", function(){search();});
             search();
             function search(){
              
                 $.ajax({
                     method: "GET",
                     url: "https://pixabay.com/api/",
                     dataType: "json",
                     data: {"key": "5589438-47a0bca778bf23fc2e8c5bf3e",
                     "q": $("#keyword").val(),},
                     success: function(result, status)
                     {
                        result.hits =  _.shuffle(result.hits);// shuffles all the elements in array
                         
                        $("#images").html(`<img src='${result.hits[0].webformatURL}'>`);
                         
                       
                        
                     }
                     
                 });//a
            }//search()
        });//d
        </script>
    </head>
    <body>
          <span id="keyword" type= "text"> 

        <h1> Add New Class </h1>
        
        <div id="content">
            <form method="POST">
        
                Subject: <select name="subject">
                    <option>BIO</option>
                    <option>BUS</option>
                    <option>CST</option>
                    <option>ENVS</option>
                    <option>FYS</option>
                    <option>HCOM</option>
                    <option>KIN</option>
                    <option>MATH</option>
                    <option>PSY</option>
                    <option>SL</option>
                </select>
                Class Number: <input type="text" name="classNumber">
                Title: <input type="text" name="title">
                <br>
                
                <button>Add Class</button>
                
                <%= typeof(message) != "undefined"?message:"" %>
                
            </form>    
            <br>
            <form action="/admin">
                 <button> Return to Admin Page </button>
            </form>
            <br>
            <div id="images"></div>
        
        </div>
        
    </body>
</html>